<div ng-app>
	<h2>Create a post</h2>

	<form style = "margin: 30px;"  name="createPostForm" action="/blog/create" method="post" enctype="multipart/form-data">
		<div class="form-group">
			<label for="title">Title</label>
			<input type="text" class="form-control" name="Title" placeholder="Title" ng-required="true" />
		</div>
        <div class="form-group">
			<label for="image">Image</label>
			<input type="file" class="form-control" name="image" value ="upload" placeholder="choose image" ng-required="true" />
		</div>
		
